---
import { EmbeeBanner } from "@components/embee-banner";
import { SectionPage } from "@components/section-page";
import { Image } from "astro:assets";
---

<SectionPage styleInline="gap: 100px">
  <EmbeeBanner
    url="https://discord.gg/c4CzFbaEtH"
    lettersUrl="letters/discord.png"
    name="discord"
    color="linear-gradient(#2eabff, #1b8ff9 40%, #145eb9 90%)"
  >
    <Image
      class="embee-img embee-discord"
      src={`/images/embee-discord.png`}
      alt={`Embeejayz discord`}
      height={180}
      width={180}
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://www.youtube.com/@embeejay69"
    lettersUrl="letters/youtube.png"
    name="youtube"
    color="linear-gradient(-180deg, #f71c0b, #D31405ff 60%, #ac1408 90%)"
  >
    <Image
      class="embee-img embee-youtube"
      src={`/images/embee-computer.png`}
      alt={`Embeejayz youtube`}
      height={170}
      width={170}
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://www.instagram.com/embeejayz/_"
    lettersUrl="letters/instagram.png"
    name="instagram"
    color="linear-gradient(30deg, #feda75, #fa7e1e, #d62976, #962fbf, #4f5bd5)"
  >
    <Image
      class="embee-img embee-instagram"
      src={`/images/embee-facha.png`}
      alt={`Embeejayz youtube`}
      height={170}
      width={170}
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://twitter.com/EmBeeJay_"
    lettersUrl="letters/twitter.png"
    name="twitter"
    color="linear-gradient(#454545, #3d3d3d 40%, #000000 90%)"
  >
    <Image
      class="embee-img embee-twitter"
      src={`/images/embee-x.png`}
      alt={`Embeejayz twitter`}
      height={180}
      width={180}
    />
  </EmbeeBanner>
</SectionPage>

<style>
  .embee-img {
    position: absolute;
    aspect-ratio: 1/1;
    bottom: 0;
    left: 0;
  }
  .embee-discord {
    transform: translate(-40px, 10%);
    height: auto;
    width: 35%;
  }

  .embee-youtube {
    transform: translate(-40px, 15%);
    height: auto;
    width: 32%;
  }

  .embee-instagram {
    transform: translate(-55px, 0);
    height: auto;
    width: 30%;
  }

  .embee-twitter {
    transform: translate(-55px, 0);
    height: auto;
    width: 35%;
  }
</style>
