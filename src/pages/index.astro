---
import { BaseLayout } from "@layouts/base-layout";
import { Image } from "astro:assets";
import { DonationsDetail } from "./_Sections/donations-detail";
import { EmbeeDetail } from "./_Sections/embee-detail";
import { SocialNetworks } from "./_Sections/social-networks";
import { SponsorsDetail } from "./_Sections/sponsors-detail";
---

<BaseLayout title="Embeejayz">
  <main>
    <EmbeeDetail />
    <SocialNetworks />
    <SponsorsDetail />
    <DonationsDetail />
    <Image
      class="shaco-dance"
      src="https://embee-org.github.io/embee-statics/gifs/shaco-dance.gif"
      alt="Shaco dance"
      width={100}
      height={100}
    />
  </main>
</BaseLayout>

<style>
  main {
    align-items: center;
    display: flex;
    flex-direction: column;
    padding: 25px;
    gap: 45px;
    width: 100%;
  }
  .shaco-dance {
    position: fixed;
    bottom: 20px;
    left: 10px;
  }
</style>
