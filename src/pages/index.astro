---
import { EmbeeBanner } from "@components/embee-banner";
import { LinkDetail } from "@components/link-detail";
import { BaseLayout } from "@layouts/base-layout";
import { getSponsors } from "@services/getSponsors";
import { Image } from "astro:assets";
import { EmbeeDetail } from "./_Sections/embee-detail";
import { SocialNetworks } from "./_Sections/social-networks";
import { SponsorsDetail } from "./_Sections/sponsors-detail";

const sponsors = getSponsors();
---

<BaseLayout title="Embeejayz">
  <main>
    <EmbeeDetail />
    <SocialNetworks />
    <SponsorsDetail />
    <section>
      <h2>Continua apoyandonos para seguir creciendo juntos ðŸš€</h2>
      <LinkDetail
        icon={"patreon.svg"}
        name={"Patreon"}
        url="https://www.patreon.com/embeejayz"
        color="#000"
        negativeColor="#fff"
      />
      <div style="margin-bottom: 25px;"></div>
      <EmbeeBanner
        url="https://streamlabs.com/embeejayz/tip"
        lettersUrl="letters/donations.png"
        name="donations"
        embee={{
          url: "images/embee-money.png",
          height: 180,
          width: 180,
          bottom: "0",
          left: "0",
          transform: "translate(-45px, 0)",
        }}
        color="linear-gradient(-180deg, #04c589, #00805d 40%, #00654b 90%)"
      />
    </section>
    <Image
      class="shaco-dance"
      src="/gifs/shaco-dance.gif"
      alt="Shaco dance"
      width={100}
      height={100}
    />
  </main>
</BaseLayout>

<style>
  main {
    align-items: center;
    display: flex;
    flex-direction: column;
    padding: 25px;
    width: 100%;
  }
  section {
    align-items: center;
    display: flex;
    flex-direction: column;
    padding: 25px;
    gap: 25px;
    width: 100%;
  }

  .embee-donations {
    background-image: url("/banners/donaciones.png");
    background-size: cover;
    background-position: center;
    aspect-ratio: 307/164;
    width: 200px;
  }
  .shaco-dance {
    position: fixed;
    bottom: 20px;
    left: 10px;
  }
</style>
